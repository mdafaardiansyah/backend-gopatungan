pipeline {
    agent {
        label "jenkins-agent"
    }
    tools {
        go 'go1.23.1'
    }
    environment {
        APP_NAME = "gopatungan-backend"
        RELEASE = "1.0.0"
        DOCKER_USER = "ardidafa"
        DOCKER_CREDS = credentials('dockerhub')
        IMAGE_NAME = "${DOCKER_USER}/${APP_NAME}"
        IMAGE_TAG = "${RELEASE}-${BUILD_NUMBER}"
        SONAR_TOKEN = credentials('user-sonarqube-token')
        VPS_SERVER = "user@your_vps_ip"
        VPS_DIR = "/path/to/gopatungan"
        DISCORD_WEBHOOK = credentials('discord-webhook')
    }
    stages {
        // ... (stages remain the same as in the previous version)
    }

    post {
        always {
            cleanWs()
        }
        success {
            discordSend (
                webhookURL: DISCORD_WEBHOOK,
                title: "Deployment Successful: ${env.JOB_NAME}",
                description: "Build #${env.BUILD_NUMBER} has completed successfully.",
                footer: "Jenkins: ${JENKINS_VERSION}, Discord Notifier: ${DISCORD_NOTIFIER_VERSION}",
                link: env.BUILD_URL,
                result: currentBuild.currentResult,
                thumbnail: "https://jenkins.io/images/logos/jenkins/jenkins.png",
                image: "https://www.jenkins.io/images/jenkins-smile.png",
                enableArtifactList: true,
                enableUrlLinking: true
            )
        }
        failure {
            discordSend (
                webhookURL: DISCORD_WEBHOOK,
                title: "Deployment Failed: ${env.JOB_NAME}",
                description: "Build #${env.BUILD_NUMBER} has failed. Please check the logs for more information.",
                footer: "Jenkins: ${JENKINS_VERSION}, Discord Notifier: ${DISCORD_NOTIFIER_VERSION}",
                link: env.BUILD_URL,
                result: currentBuild.currentResult,
                thumbnail: "https://jenkins.io/images/logos/jenkins/jenkins.png",
                image: "https://www.jenkins.io/images/jenkins-smile.png",
                enableArtifactList: true,
                enableUrlLinking: true
            )
        }
    }
}